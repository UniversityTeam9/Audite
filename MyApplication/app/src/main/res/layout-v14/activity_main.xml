<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bluetoothButton"
            android:src="@mipmap/ic_bluetooth"
            android:tint="#32556B"
            android:layout_gravity="left" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="379dp"
        android:layout_height="290dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="378dp"
            android:layout_height="133dp">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="155dp"
                android:id="@+id/voiceButton"
                android:src="@mipmap/testtttt"
                android:layout_weight="1"
                android:onClick="speakButtonClicked"
                android:layout_marginLeft="-10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="351dp"
            android:layout_height="50dp"
            android:layout_gravity="center|bottom">

            <SeekBar
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_gravity="center"
                android:max="2"
                android:progress="0"
                android:layout_marginBottom="-20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Speed"
                android:id="@+id/textView3"
                android:textColor="#4fa485"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:background="#FFC605">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/buttonRearProximity"
                android:src="@mipmap/ic_leak_add_black_24dp"
                android:layout_weight="2"
                android:tint="#32556B"
                android:background="#00000000" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/buttonFrontLight"
                android:src="@mipmap/ic_lightbulb_outline_black_24dp"
                android:tint="#4fa485"
                android:layout_weight="2"
                android:onClick="#FFC605"
                android:nestedScrollingEnabled="true" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/buttonFrontProximity"
                android:src="@mipmap/ic_leak_add_black_24dp"
                android:layout_weight="2"
                android:tint="#32556B"
                android:background="#00000000"
                android:layout_marginRight="30dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4fa485">

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Back"
                android:id="@+id/textView2"
                android:layout_gravity="center|left"
                android:textColor="#ffffff"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Front"
                android:id="@+id/textView"
                android:layout_gravity="center|right"
                android:textSize="@dimen/activity_horizontal_margin"
                android:hint="#FFC605"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_marginLeft="150dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="397dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="#FF3A5D73">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/buttonUp"
            android:src="@mipmap/ic_up"
            android:layout_gravity="center"
            android:tint="#ffffff"
            android:layout_marginRight="18dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7495AB">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/buttonLeft"
            android:src="@mipmap/ic_left"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:tint="#ffffff"
            android:background="#FF3A5D73" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:id="@+id/stopButton"
            android:src="@android:drawable/ic_delete"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:tint="#ffffff"
            android:background="#FF3A5D73" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/buttonRight"
            android:src="@mipmap/ic_right"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:tint="#ffffff"
            android:background="#FF3A5D73" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:gravity="center"
        android:background="#FF3A5D73">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/buttonDown"
            android:src="@mipmap/ic_down"
            android:layout_gravity="center|bottom"
            android:tint="#ffffff"
            android:layout_marginBottom="70dp" />

    </LinearLayout>

</LinearLayout>
