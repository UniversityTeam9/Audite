<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.auditeTeam9.MainActivity">

    <GridLayout
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="6" android:id="@+id/gridLayout2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLeft"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@mipmap/ic_left" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonUp"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@mipmap/ic_up" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRight"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_row="3"
            android:layout_column="2"
            android:src="@mipmap/ic_right" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDown"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_row="4"
            android:layout_column="1"
            android:src="@mipmap/ic_down" />

    </GridLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothButton"
        style="@android:style/Widget.DeviceDefault.Button"

        android:src="@mipmap/ic_bluetooth"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFrontProximity"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@mipmap/ic_proximity" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRearProximity"
            android:layout_row="5"
            android:layout_column="1"
            android:src="@mipmap/ic_proximity" android:layout_below="@+id/buttonFrontProximity"
            android:layout_alignLeft="@+id/buttonFrontProximity"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFrontLight"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@mipmap/ic_light" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
     <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPEAK"
            android:onClick="speakButtonClicked"
            style="@android:style/Widget.DeviceDefault.Button"
            android:id="@+id/voiceButton" android:layout_row="3" android:layout_column="1"
            android:layout_below="@+id/gridLayout2" android:layout_centerHorizontal="true"/>
</RelativeLayout>
